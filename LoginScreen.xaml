<Window x:Class="WpfApp1.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="350">
    <Border Background="#bdbdbd" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="txtUsername" Background="White" Foreground="Black" FontSize="18" BorderBrush="{x:Null}"/>
            <Label Content="Password" Foreground="Black"/>
            <PasswordBox Name="txtPassword" Background="White" Foreground="Black" FontSize="18" BorderBrush="{x:Null}"/>
            <Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Masuk" Margin="60 20" Background="White" Foreground="Black" FontSize="18" BorderBrush="{x:Null}" Height="35"/>
        </StackPanel>
    </Border>
</Window>
